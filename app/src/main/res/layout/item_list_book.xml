<?xml version="1.0" encoding="utf-8"?>
<!--Card View widget-->
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/card_book_item"
    android:layout_width="162dp"
    android:layout_height="263dp"
    card_view:cardElevation="2dp"
    android:layout_marginVertical="5dp"
    card_view:cardBackgroundColor="@color/accent_blue"
    android:layout_marginHorizontal="5dp"
    >

    <!--Text View over Card View-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_book_cover"
            android:layout_width="match_parent"
            android:layout_height="199dp"
            android:layout_above="@+id/ly_title"
            android:layout_alignParentTop="true"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="4dp"
            android:foregroundGravity="fill_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/ic_open_book_svgrepo_com" />

        <RelativeLayout
            android:paddingHorizontal="8dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/ly_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/btn_more"
                android:paddingRight="5dp"
                android:text="Principles of Information Security"
                android:textColor="@color/white"
                android:textSize="11dp" />
            <ImageView
                android:id="@+id/btn_more"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/white"
                android:background="@drawable/ic_right_arrow"/>

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>