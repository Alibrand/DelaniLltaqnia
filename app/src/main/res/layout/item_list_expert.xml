<?xml version="1.0" encoding="utf-8"?>
<!--Card View widget-->
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_course_item"
    android:layout_width="153dp"
    android:layout_height="280dp"
    card_view:contentPadding="8dp"
    card_view:cardCornerRadius="18dp"
    card_view:cardElevation="2dp"
    android:layout_marginVertical="5dp"
    card_view:cardBackgroundColor="@color/accent_blue"
    android:layout_marginHorizontal="5dp"
    >

    <!--Text View over Card View-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_course_logo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:tint="@color/white"
            android:src="@drawable/ic_user_icon" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="left"
            android:textStyle="bold"
            android:text="Information security manager - Samer Ahmed"
            android:textColor="#fff"
            android:textSize="13dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:gravity="left"
            android:textStyle="bold"
            android:text="Brief"

            android:textColor="@color/yellow"
            android:textSize="13dp" />
        <TextView
            android:id="@+id/txt_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:gravity="left"
            android:textStyle="bold"
            android:text="I work for an airline in the IT department, interested in Security.
Java - HTML
34 Years old"
            android:textColor="#fff"
            android:textSize="13dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">
             <ImageButton
                 android:id="@+id/btn_insta"
                 android:layout_width="25dp"
                 android:padding="5dp"
                 android:layout_height="25dp"
                 android:scaleType="centerInside"
                 android:elevation="2dp"
                 app:tint="@color/purple"
                 android:src="@drawable/ic_riline_instagram_line"
                 android:background="@drawable/circular_btn"
                 />
            <ImageButton
                android:id="@+id/btn_twitter"
                android:layout_width="25dp"
                android:padding="5dp"
                android:layout_height="25dp"
                android:scaleType="centerInside"
                android:elevation="12dp"
                app:tint="@color/accent_blue"
                android:layout_marginHorizontal="14dp"
                android:src="@drawable/ic_riline_twitter_line"
                android:background="@drawable/circular_btn"
                />
            <ImageButton
                android:id="@+id/btn_snapchat"
                android:layout_width="25dp"
                android:padding="5dp"
                android:layout_height="25dp"
                android:scaleType="centerInside"
                android:elevation="2dp"
                app:tint="@color/yellow"
                android:src="@drawable/ic_riline_snapchat_line"
                android:background="@drawable/circular_btn"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>